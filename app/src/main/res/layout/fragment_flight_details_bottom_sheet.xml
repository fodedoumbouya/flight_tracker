<!-- fragment_flight_details_bottom_sheet.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Add your content for flight details here -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flight Details"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <!-- Example content (Replace with your own) -->
    <TextView
        android:id="@+id/textFlightNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flight number: "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDeparture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departure: "
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination:"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/liveButton"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Live"
        android:textSize="24sp" />

    <!-- Add more details or buttons as needed -->

</LinearLayout>
